<?xml version="1.0" encoding="UTF-8"?>
<plug-in>
    <name>appcenter</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>appcenter.plugin.description</description>
    <provider>appcenter.plugin.provider</provider>
    <provider-url>http://fr.lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/feature_default_icon.png</icon-url>
    <copyright>Copyright (c) 2017 Mairie de Paris</copyright>
    <db-pool-required>1</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>4.1.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

    <css-stylesheets>
        <css-stylesheet>appcenter/appcenter.css</css-stylesheet>
    </css-stylesheets>

    <!-- Admin features parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>APPCENTER_MANAGEMENT</feature-id>
            <feature-title>appcenter.adminFeature.ManageAppCenter.name</feature-title>
            <feature-description>appcenter.adminFeature.ManageAppCenter.description</feature-description>
            <feature-level>1</feature-level>
            <feature-url>jsp/admin/plugins/appcenter/ManageApplications.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
      </admin-feature>
	<admin-feature>
            <feature-id>APPCENTER_RESOURCE_MANAGEMENT</feature-id>
            <feature-title>appcenter.adminFeature.ManageResource.name</feature-title>
            <feature-description>appcenter.adminFeature.ManageResource.description</feature-description>
            <feature-level>0</feature-level>
            <feature-url>jsp/admin/plugins/appcenter/ManageResources.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
      </admin-feature>
        <admin-feature>
            <feature-id>APPCENTER_ACTION_ROLES_MANAGEMENT</feature-id>
            <feature-title>appcenter.adminFeature.ManageActionRoles.name</feature-title>
            <feature-description>appcenter.adminFeature.ManageActionRoles.description</feature-description>
            <feature-level>0</feature-level>
            <feature-url>jsp/admin/plugins/appcenter/ManageActionRoles.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
      </admin-feature>
        <admin-feature>
            <feature-id>APPCENTER_PROFILE_MANAGEMENT</feature-id>
            <feature-title>appcenter.adminFeature.ManageProfile.name</feature-title>
            <feature-description>appcenter.adminFeature.ManageProfile.description</feature-description>
            <feature-level>0</feature-level>
            <feature-url>jsp/admin/plugins/appcenter/ManageProfiles.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
      </admin-feature>
        <admin-feature>
            <feature-id>APPCENTER_USER_APPLICATION_PROFILE_MANAGEMENT</feature-id>
            <feature-title>appcenter.adminFeature.ManageUserApplicationProfile.name</feature-title>
            <feature-description>appcenter.adminFeature.ManageUserApplicationProfile.description</feature-description>
            <feature-level>0</feature-level>
            <feature-url>jsp/admin/plugins/appcenter/ManageUserApplicationProfiles.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
      </admin-feature>
        <admin-feature>
            <feature-id>APPCENTER_ACTION_ROLES_PROFILE_MANAGEMENT</feature-id>
            <feature-title>appcenter.adminFeature.ManageActionRolesProfile.name</feature-title>
            <feature-description>appcenter.adminFeature.ManageActionRolesProfile.description</feature-description>
            <feature-level>0</feature-level>
            <feature-url>jsp/admin/plugins/appcenter/ManageActionRoleProfiles.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
      </admin-feature>
    </admin-features>    

    <!-- XPages parameters -->
    <applications>
        <application>
            <application-id>application</application-id>
            <application-class>fr.paris.lutece.plugins.appcenter.web.ApplicationXPage</application-class>
        </application>
    </applications>

    <!-- Portlet parameters -->
    <portlets>
   </portlets>
   
   <!-- RBAC Resources -->
    <rbac-resource-types>
        <rbac-resource-type>
            <rbac-resource-type-class>
                fr.paris.lutece.plugins.appcenter.service.DemandTypeIdService
            </rbac-resource-type-class>
        </rbac-resource-type>
    </rbac-resource-types>
</plug-in>
